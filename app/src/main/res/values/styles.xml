<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="address_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingBottom">@dimen/padding_small_5dp</item>
        <item name="android:paddingLeft">@dimen/padding_15dp</item>
        <item name="android:paddingRight">@dimen/padding_15dp</item>
        <item name="android:paddingTop">@dimen/layout_margin_10dp</item>
        <item name="android:textColor">@color/address_color</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
    </style>

    <style name="city_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingBottom">@dimen/padding_small_5dp</item>
        <item name="android:paddingLeft">@dimen/padding_15dp</item>
        <item name="android:paddingRight">@dimen/padding_15dp</item>
        <item name="android:paddingTop">@dimen/padding_small_5dp</item>
        <item name="android:textColor">@color/address_color</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
    </style>

    <style name="phone_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingBottom">@dimen/layout_margin_10dp</item>
        <item name="android:paddingLeft">@dimen/padding_15dp</item>
        <item name="android:paddingRight">@dimen/padding_15dp</item>
        <item name="android:paddingTop">@dimen/padding_small_5dp</item>
        <item name="android:textColor">@color/address_color</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
    </style>

</resources>
